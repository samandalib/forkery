{
  "name": "cursor-preview",
  "displayName": "One-Click Local Preview",
  "description": "One-click local preview for designers - no terminal required",
  "version": "0.1.6",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:preview.run",
    "onCommand:preview.stop",
    "onCommand:preview.restart",
    "onCommand:preview.createProject",
    "onCommand:preview.showUI",
    "onCommand:preview.showTemplates",
    "onCommand:preview.showProjectControl",
    "onCommand:preview.reloadUI"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "preview.run",
        "title": "Preview: Run",
        "category": "Preview"
      },
      {
        "command": "preview.stop",
        "title": "Preview: Stop",
        "category": "Preview"
      },
      {
        "command": "preview.restart",
        "title": "Preview: Restart",
        "category": "Preview"
      },
      {
        "command": "preview.createProject",
        "title": "Preview: Create New Project",
        "category": "Preview"
      },
      {
        "command": "preview.showUI",
        "title": "Preview: Show Project UI",
        "category": "Preview"
      },
      {
        "command": "preview.showTemplates",
        "title": "Preview: Show Templates",
        "category": "Preview"
      },
      {
        "command": "preview.showProjectControl",
        "title": "Preview: Show Project Control",
        "category": "Preview"
      },
      {
        "command": "preview.reloadUI",
        "title": "Preview: Reload UI (Dev)",
        "category": "Preview"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "preview.showUI",
          "when": "view == preview.templates",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Preview",
      "properties": {
        "preview.port": {
          "type": "number",
          "default": null,
          "description": "Default port for preview (null = auto-detect)"
        },
        "preview.browserMode": {
          "type": "string",
          "enum": [
            "in-editor",
            "external"
          ],
          "default": "in-editor",
          "description": "How to display the preview"
        },
        "preview.defaultScript": {
          "type": "string",
          "default": "dev",
          "description": "Default npm script to run for preview"
        }
      }
    },
    "statusBar": {
      "items": [
        {
          "id": "preview.status",
          "name": "Preview Status",
          "alignment": "left",
          "priority": 100
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "preview",
          "title": "Preview",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "preview": [
        {
          "type": "webview",
          "id": "preview.templates",
          "name": "Project Templates",
          "when": "!preview.isRunning"
        },
        {
          "type": "webview",
          "id": "preview.control",
          "name": "Project Control",
          "when": "preview.isRunning"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.56.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "detect-port": "^1.5.1"
  },
  "bundledDependencies": [
    "detect-port"
  ],
  "bundleDependencies": [
    "detect-port"
  ]
}
